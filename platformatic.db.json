{
  "$schema": "https://platformatic.dev/schemas/v0.19.0/db",
  "server": {
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}",
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    }
  },
  "migrations": {
    "dir": "migrations",
    "autoApply": true
  },
  "types": {
    "autogenerate": true
  },
  "authorization": {
    "jwt": {
      "secret": "{PLT_JWT_SECRET}"
    },
    "rules": [
      {
        "role": "admin",
        "entities": [
          "customer",
          "meter",
          "reading",
          "billingPeriod",
          "waterInvoice",
          "waterPayment",
          "waterInvoiceItem",
          "shartInvoice",
          "shartPayment"
        ],
        "find": true,
        "save": true,
        "delete": true
      }
    ]
  },
  "plugins": {
    "paths": ["./plugins/index.js"]
  },
  "db": {
    "connectionString": "{DATABASE_URL}",
    "graphql": true,
    "openapi": true,
    "graphiql": true
  }
}
