{
  "$schema": "https://platformatic.dev/schemas/v0.26.1/db",
  "server": {
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}",
    "cors": {
      "origin": ["{PLT_WEB_DOMAIN}", "{PLT_CLOUD_DOMAIN}"],
      "exposedHeaders": "X-Total-Count"
    },
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    }
  },
  "migrations": {
    "dir": "migrations",
    "autoApply": true
  },
  "types": {
    "autogenerate": true
  },
  "authorization": {
    "jwt": {
      "secret": "{PLT_JWT_SECRET}"
    },
    "adminSecret": "{PLT_ADMIN_SECRET}",
    "rules": [
      {
        "role": "admin",
        "entities": [
          "member",
          "meter",
          "reading"
        ],
        "find": true,
        "save": true,
        "delete": true
      }
    ]
  },
  "plugins": {
    "paths": ["./plugins/index.js"]
  },
  "db": {
    "connectionString": "{DATABASE_URL}",
    "graphql": true,
    "openapi": true,
    "graphiql": true
  }
}
