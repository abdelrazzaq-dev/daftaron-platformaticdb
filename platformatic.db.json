{
  "$schema": "./platformatic.db.schema.json",
  "server": {
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}",
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    }
  },
  "core": {
    "connectionString": "{DATABASE_URL}",
    "graphql": true,
    "openapi": true,
    "graphiql": true
  },
  "migrations": {
    "dir": "migrations",
    "autoApply": true
  },
  "plugin": {
    "path": "plugin.js"
  },
  "types": {
    "autogenerate": true
  },
  "authorization": {
    "jwt": {
      "secret": "{PLT_AUTHORIZATION_JWT_SECRET}"
    },
    "rules": [
      {
        "role": "admin",
        "entities": ["member", "meter", "reading", "invoice", "payment", "rate"],
        "find": true,
        "save": true,
        "delete": true
      }
    ]
    
  }
}
